extends ../../../views/layout
include  ../../../../commonComponents/pug/formComponents

block title
  | #{pageName} : #{subdir}

block content
  #renameDialog.modal.fade(tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-header
          h3.modal-title #{t('wiki.rename', {pageName: pageName})}
          button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        .modal-body
          .row
            .col-md-12
              !=t('wiki.rename_info', { postProcess: 'pug' }) 
              form#addonform(action='/wiki/rename/' + subdir + '/' + pageName, method='post')
                +csrf
                fieldset
                  +text('newName', t('wiki.newname'), '')
                  button.btn.btn-primary.float-right(type='submit') #{t('general.save')}


  .row
    .col-12
      .btn-group.float-right
          a.btn.btn-light(href='/wiki/list/' + subdir + '/', title=t('wiki.all_pages') + ' "' + subdir + '"'): i.fa.fa-list.fa-fw
          a.btn.btn-light(href='/wiki/versions/' + subdir + '/' + pageName, title=t('wiki.revisions')): i.fa.fa-sort-amount-desc.fa-fw
          if (canEdit)
            a.btn.btn-light(data-toggle='modal', href='#renameDialog', title=t('general.rename')): i.fa.fa-cogs.fa-fw
            a.btn.btn-light(href='/wiki/edit/' + subdir + '/' + pageName, title=t('general.edit')): i.fa.fa-edit.fa-fw
      form.d-print-none.form-search.float-right(action='/wiki/search', method='post')
        +csrf
        input.form-control(type='text', name='searchtext', placeholder=t('wiki.search'))
      h1 #{title}

  .row
    .col-12
      | !{content}
